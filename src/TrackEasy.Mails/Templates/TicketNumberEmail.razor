@using TrackEasy.Mails.Abstractions.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ticket Code</title>
    <style>
        body { margin: 0; padding: 0; font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif; }
        .container { max-width: 600px; margin: 0 auto; padding: 20px; }
        .header { text-align: center; padding: 8px 0; background-color: #1a237e; }
        .content { padding: 40px 30px; background-color: #f8f9fa; }
        .footer { 
            text-align: center; 
            padding: 20px; 
            color: #666; 
            font-size: 12px; 
            background-color: #e8eaf6; 
        }
    </style>
</head>
<body>
<div class="container">
    <div class="header">
        <h1 style="color: white;">TrackEasy</h1>
        <p style="color: white;">Your journey to better tracking starts here!</p>
    </div>
        
    <div class="content">
        <h2 style="color: #1a237e; margin-bottom: 25px;">Your Ticket Number:</h2>
        <p style="font-size: 1.5em; font-weight: bold; color: #1a237e;">@Model.TicketNumber</p>
        <p>Please present this ticket number to the conductor to finish your payment.</p>
    </div>

    <div class="footer">
        <p>Â© @DateTime.Now.Year TrackEasy. All rights reserved.</p>
        <p style="margin-top: 10px;">This is an automated message - please do not reply directly to this email.</p>
    </div>
</div>
</body>
</html>

@code {
    [Parameter]
    public required TicketNumberModel Model { get; set; }    
}